 <div className=\"flex items-center justify-between\">\n            <div>\n              <p className=\"font-bold text-amber-900\">Chords Learned</p>\n              <p className=\"text-sm text-amber-600\">\n                {learnedChords.length} of {chords.length} chords mastered\n              </p>\n            </div>\n            <div className=\"text-3xl font-bold text-amber-700\">\n              {Math.round((learnedChords.length / chords.length) * 100)}%\n            </div>\n          </div>\n        </CardContent>\n      </Card>\n\n      {/* Chord Categories */}\n      <Tabs defaultValue={categories[0]} className=\"w-full\">\n        <TabsList className=\"flex flex-wrap gap-2 h-auto bg-amber-100/50 p-2\">\n          {categories.map((cat) => (\n            <TabsTrigger\n              key={cat}\n              value={cat}\n              className=\"capitalize data-[state=active]:bg-amber-500 data-[state=active]:text-white\"\n            >\n              {cat} Chords\n            </TabsTrigger>\n          ))}\n        </TabsList>\n\n        {categories.map((category) => (\n          <TabsContent key={category} value={category} className=\"mt-6\">\n            <div className=\"grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6\">\n              {filteredChords\n                .filter((chord) => chord.category === category)\n                .map((chord) => {\n                  const isLearned = learnedChords.includes(chord.id);\n                  return (\n                    <Card\n                      key={chord.id}\n                      className={`transition-all duration-300 hover:shadow-lg cursor-pointer ${\n                        selectedChord?.id === chord.id\n                          ? 'ring-2 ring-amber-500'\n                          : 'hover:-translate-y-1'\n                      } ${isLearned ? 'bg-emerald-50 border-emerald-200' : 'bg-white/80 border-amber-200'}`}\n                      onClick={() => setSelectedChord(chord)}\n                    >\n                      <CardContent className=\"p-4\">\n                        <div className=\"flex items-center justify-between mb-3\">\n                          <h3 className=\"text-lg font-bold text-amber-900\">{chord.name}</h3>\n                          <button\n                            onClick={(e) => {\n                              e.stopPropagation();\n                              toggleLearned(chord.id);\n                            }}\n                            className=\"transition-transform hover:scale-110\"\n                          >\n                            {isLearned ? (\n                              <CheckCircle className=\"w-6 h-6 text-emerald-500\" />\n                            ) : (\n                              <Circle className=\"w-6 h-6 text-amber-300\" />\n                            )}\n                          </button>\n                        </div>\n                        <ChordDiagram chord={chord} />\n                        <div className=\"mt-3 flex items-center justify-between\">\n                          <Badge\n                            variant=\"secondary\"\n                            className={`capitalize ${\n                              chord.difficulty === 'beginner'\n                                ? 'bg-emerald-100 text-emerald-700'\n                                : chord.difficulty === 'intermediate'\n                                ? 'bg-amber-100 text-amber-700'\n                                : 'bg-red-100 text-red-700'\n                            }`}\n                          >\n                            {chord.difficulty}\n                          </Badge>\n                        </div>\n                      </CardContent>\n                    </Card>\n                  );\n                })}\n            </div>\n          </TabsContent>\n        ))}\n      </Tabs>\n\n      {/* Chord Detail Modal */}\n      {selectedChord && (\n        <div\n          className=\"fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4\"\n          onClick={() => setSelectedChord(null)}\n        >\n          <Card\n            className=\"w-full max-w-lg bg-white\"\n            onClick={(e) => e.stopPropagation()}\n          >\n            <CardHeader>\n              <div className=\"flex items-center justify-between\">\n                <CardTitle className=\"text-2xl text-amber-900\">\n                  {selectedChord.name}\n                </CardTitle>\n                <Badge\n                  className={`capitalize ${\n                    selectedChord.difficulty === 'beginner'\n                      ? 'bg-emerald-100 text-emerald-700'\n                      : selectedChord.difficulty === 'intermediate'\n                      ? 'bg-amber-100 text-amber-700'\n                      : 'bg-red-100 text-red-700'\n                  }`}\n                >\n                  {selectedChord.difficulty}\n                </Badge>\n              </div>\n            </CardHeader>\n            <CardContent className=\"space-y-6\">\n              <div className=\"bg-amber-50 rounded-xl p-6\">\n                <ChordDiagram chord={selectedChord} size=\"large\" />\n              </div>\n              <div>\n                <h4 className=\"font-bold text-amber-900 mb-2\">Description</h4>\n                <p className=\"text-amber-700\">{selectedChord.description}</p>\n              </div>\n              <div>\n                <h4 className=\"font-bold text-amber-900 mb-2\">Finger Positions</h4>\n                <div className=\"flex flex-wrap gap-2\">\n                  {selectedChord.fingers.map((pos, i) => (\n                    <Badge key={i} variant=\"outline\" className=\"border-amber-300\">\n                      String {pos.string}, Fret {pos.fret} - Finger {pos.finger}\n                    </Badge>\n                  ))}\n                </div>\n              </div>\n              <div className=\"flex gap-3\">\n                <Button\n             